<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ExoMediaButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/exo_media_button_width</item>
        <item name="android:layout_height">@dimen/exo_media_button_height</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ExoMediaButton.Previous">
        <item name="android:src">@drawable/ic_prev</item>
        <item name="android:contentDescription">@string/exo_controls_previous_description</item>
    </style>

    <style name="ExoMediaButton.Next">
        <item name="android:src">@drawable/exo_controls_next</item>
        <item name="android:contentDescription">@string/exo_controls_next_description</item>
    </style>

    <style name="ExoMediaButton.FastForward">
        <item name="android:src">@drawable/ic_forward</item>
        <item name="android:contentDescription">@string/exo_controls_fastforward_description</item>
    </style>

    <style name="ExoMediaButton.Rewind">
        <item name="android:src">@drawable/ic_backward</item>
        <item name="android:contentDescription">@string/exo_controls_rewind_description</item>
    </style>

    <style name="ExoMediaButton.Play">
        <item name="android:src">@drawable/ic_play</item>
        <item name="android:contentDescription">@string/exo_controls_play_description</item>
    </style>

    <style name="ExoMediaButton.PlayRound">
        <item name="android:src">@drawable/ic_play_round</item>
        <item name="android:contentDescription">@string/exo_controls_play_description</item>
    </style>

    <style name="ExoMediaButton.Pause">
        <item name="android:src">@drawable/exo_controls_pause</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>

    <style name="ExoMediaButton.PauseRound">
        <item name="android:src">@drawable/ic_pause_round</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>

    <style name="ExoMediaButton.Question">
        <item name="android:src">@drawable/ic_question</item>
        <item name="android:contentDescription">@string/exo_controls_question_description</item>
    </style>

    <style name="ExoMediaButton.Playlist">
        <item name="android:src">@drawable/ic_playlist_copy</item>
        <item name="android:contentDescription">@string/exo_controls_playlist_description</item>
    </style>

    <style name="ExoMediaButton.Language">
        <item name="android:src">@drawable/ic_language</item>
        <item name="android:contentDescription">@string/exo_controls_languagge_description</item>
    </style>

    <style name="ExoMediaButton.Setting">
        <item name="android:src">@drawable/ic_setting</item>
        <item name="android:contentDescription">@string/exo_controls_setting_description</item>
    </style>

    <style name="ExoMediaButton.Fullscreen">
        <item name="android:src">@drawable/ic_fullscreen</item>
        <item name="android:contentDescription">@string/exo_controls_fullscreen_description</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">76dip</item>
        <item name="maxWidth">76dip</item>
        <item name="minHeight">76dip</item>
        <item name="maxHeight">76dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

</resources>
