<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_33"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:id="@id/exo_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:padding="@dimen/padding_5"
            android:singleLine="true"
            android:textColor="@color/White"
            android:textSize="@dimen/txt_15"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@id/exo_next"
                    style="@style/ExoMediaButton.Next"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@id/exo_question"
                    style="@style/ExoMediaButton.Question"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@id/exo_playlist"
                    style="@style/ExoMediaButton.Playlist"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@id/exo_language"
                    style="@style/ExoMediaButton.Language"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@id/exo_setting"
                    style="@style/ExoMediaButton.Setting"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@id/exo_fullscreen"
                    style="@style/ExoMediaButton.Fullscreen" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageButton
            android:id="@id/exo_prev"
            style="@style/ExoMediaButton.Previous"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_rew_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:text="@string/_10s"
            android:textColor="@color/White"
            android:textSize="@dimen/txt_8"
            android:visibility="gone" />

        <ImageButton
            android:id="@id/exo_rew"
            style="@style/ExoMediaButton.Rewind"
            android:layout_gravity="center"
            android:visibility="gone" />

        <ImageButton
            android:id="@id/exo_repeat_toggle"
            style="@style/ExoMediaButton"
            android:visibility="gone" />

        <ImageButton
            android:id="@id/exo_pause"
            style="@style/ExoMediaButton.PauseRound"
            android:layout_width="@dimen/w_80"
            android:layout_height="@dimen/w_80"
            android:scaleType="fitXY"
            android:tint="@color/White" />

        <ImageButton
            android:id="@id/exo_play"
            style="@style/ExoMediaButton.PlayRound"
            android:layout_width="@dimen/w_80"
            android:layout_height="@dimen/w_80"
            android:scaleType="fitXY"
            android:tint="@color/White" />

        <ImageButton
            android:id="@id/exo_ffwd"
            style="@style/ExoMediaButton.FastForward"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_ffwd_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="@string/_10s"
            android:textColor="@color/White"
            android:textSize="@dimen/txt_8"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/black_33"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/padding_5"
            android:paddingRight="@dimen/padding_5"
            android:textColor="@color/White"
            android:textSize="@dimen/txt_12"
            android:visibility="gone" />

        <TextView
            android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_5"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/padding_5"
            android:paddingRight="@dimen/padding_5"
            android:textColor="@color/White"
            android:textSize="@dimen/txt_12" />

        <com.uiza.player.ui.views.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_26"
            app:buffered_color="@color/df_buffered_color"
            app:played_color="@color/df_played_color"
            app:scrubber_color="@color/df_scrubber_color"
            app:unplayed_color="@color/df_unplayed_color" />
    </LinearLayout>

</RelativeLayout>
