<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <vn.loitp.views.placeholderview.lib.placeholderview.PlaceHolderView
        android:id="@+id/place_holder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_55"
        android:background="@color/Red"
        android:gravity="center"
        android:padding="@dimen/padding_5"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/padding_5"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_18"
        android:textStyle="bold" />

    <vn.loitp.views.progressloadingview.avloadingindicatorview.lib.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="@dimen/w_20"
        android:layout_height="@dimen/w_20"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_55"
        app:indicatorColor="@color/White"
        app:indicatorName="BallSpinFadeLoaderIndicator" />
</RelativeLayout>